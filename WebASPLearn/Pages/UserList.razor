@inject WebASPLearn.Services.UserService UserService
@using WebASPLearn.Models

<div class="bg-white rounded-xl shadow-sm border border-gray-200">
    <div class="px-6 py-4 border-b border-gray-200">
        <h3 class="text-lg font-semibold text-gray-900">User List</h3>
    </div>

    @if (Users == null)
    {
        <div class="p-6 text-center">
            <div class="inline-block animate-spin rounded-full h-8 w-8 border-4 border-gray-200 border-t-brand-600"></div>
            <p class="mt-2 text-sm text-gray-500">Loading users...</p>
        </div>
    }
    else if (!Users.Any())
    {
        <div class="p-10 text-center">
            <svg class="mx-auto h-12 w-12 text-gray-300" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5"
                      d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0z" />
            </svg>
            <p class="mt-2 text-sm text-gray-500">No users found. Add one using the form.</p>
        </div>
    }
    else
    {
        <div class="overflow-x-auto">
            <table class="w-full text-sm text-left">
                <thead class="bg-gray-50 text-xs uppercase text-gray-500 tracking-wider">
                    <tr>
                        <th class="px-6 py-3 font-medium">Name</th>
                        <th class="px-6 py-3 font-medium">Surname</th>
                        <th class="px-6 py-3 font-medium">Address</th>
                        <th class="px-6 py-3 font-medium">Email</th>
                        <th class="px-6 py-3 font-medium">Phone</th>
                        <th class="px-6 py-3 font-medium text-right">Actions</th>
                    </tr>
                </thead>
                <tbody class="divide-y divide-gray-100">
                    @foreach (var user in Users)
                    {
                        <tr class="hover:bg-gray-50 transition-colors">
                            <td class="px-6 py-3.5 font-medium text-gray-900">@user.Name</td>
                            <td class="px-6 py-3.5 text-gray-600">@user.Surname</td>
                            <td class="px-6 py-3.5 text-gray-600">@user.Address</td>
                            <td class="px-6 py-3.5 text-gray-600">@user.Email</td>
                            <td class="px-6 py-3.5 text-gray-600">@user.Phone</td>
                            <td class="px-6 py-3.5 text-right">
                                <div class="inline-flex gap-2">
                                    <button class="inline-flex items-center gap-1 rounded-md bg-amber-50 px-2.5 py-1.5 text-xs font-medium text-amber-700 hover:bg-amber-100 transition"
                                            @onclick="(() => EditUser(user))">
                                        <svg class="w-3.5 h-3.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                                  d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z" />
                                        </svg>
                                        Edit
                                    </button>
                                    <button class="inline-flex items-center gap-1 rounded-md bg-red-50 px-2.5 py-1.5 text-xs font-medium text-red-700 hover:bg-red-100 transition"
                                            @onclick="(() => DeleteUser(user.Id))">
                                        <svg class="w-3.5 h-3.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                                  d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16" />
                                        </svg>
                                        Delete
                                    </button>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
</div>

@* Edit Modal *@
@if (ShowEditDialog)
{
    <div class="fixed inset-0 z-50 flex items-center justify-center p-4">
        <!-- Backdrop -->
        <div class="fixed inset-0 bg-black/40 backdrop-blur-sm" @onclick="CloseEditDialog"></div>

        <!-- Modal -->
        <div class="relative z-10 w-full max-w-md bg-white rounded-xl shadow-xl">
            <!-- Header -->
            <div class="flex items-center justify-between px-6 py-4 border-b border-gray-200">
                <h3 class="text-lg font-semibold text-gray-900">Edit User</h3>
                <button class="text-gray-400 hover:text-gray-600 transition" @onclick="CloseEditDialog">
                    <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
                    </svg>
                </button>
            </div>

            <!-- Body -->
            <div class="px-6 py-4">
                <EditForm Model="@EditingUser" OnValidSubmit="UpdateUser">
                    <DataAnnotationsValidator />
                    <ValidationSummary class="text-red-500 text-sm mb-4" />

                    <div class="space-y-4">
                        <div>
                            <label for="editName" class="block text-sm font-medium text-gray-700 mb-1">Name</label>
                            <InputText id="editName"
                                       class="w-full rounded-lg border border-gray-300 px-3 py-2 text-sm shadow-sm focus:outline-none focus:ring-2 focus:ring-brand-500 focus:border-brand-500 transition"
                                       @bind-Value="EditingUser.Name" />
                        </div>
                        <div>
                            <label for="editSurname" class="block text-sm font-medium text-gray-700 mb-1">Surname</label>
                            <InputText id="editSurname"
                                       class="w-full rounded-lg border border-gray-300 px-3 py-2 text-sm shadow-sm focus:outline-none focus:ring-2 focus:ring-brand-500 focus:border-brand-500 transition"
                                       @bind-Value="EditingUser.Surname" />
                        </div>
                        <div>
                            <label for="editAddress" class="block text-sm font-medium text-gray-700 mb-1">Address</label>
                            <InputText id="editAddress"
                                       class="w-full rounded-lg border border-gray-300 px-3 py-2 text-sm shadow-sm focus:outline-none focus:ring-2 focus:ring-brand-500 focus:border-brand-500 transition"
                                       @bind-Value="EditingUser.Address" />
                        </div>
                        <div>
                            <label for="editEmail" class="block text-sm font-medium text-gray-700 mb-1">Email</label>
                            <InputText id="editEmail"
                                       class="w-full rounded-lg border border-gray-300 px-3 py-2 text-sm shadow-sm focus:outline-none focus:ring-2 focus:ring-brand-500 focus:border-brand-500 transition"
                                       @bind-Value="EditingUser.Email" />
                        </div>
                        <div>
                            <label for="editPhone" class="block text-sm font-medium text-gray-700 mb-1">Phone</label>
                            <InputText id="editPhone"
                                       class="w-full rounded-lg border border-gray-300 px-3 py-2 text-sm shadow-sm focus:outline-none focus:ring-2 focus:ring-brand-500 focus:border-brand-500 transition"
                                       @bind-Value="EditingUser.Phone" />
                        </div>
                    </div>

                    <div class="flex gap-3 mt-5">
                        <button type="submit"
                                class="flex-1 inline-flex justify-center items-center rounded-lg bg-brand-600 px-4 py-2.5 text-sm font-semibold text-white shadow-sm hover:bg-brand-700 focus:outline-none focus:ring-2 focus:ring-brand-500 focus:ring-offset-2 transition">
                            Save Changes
                        </button>
                        <button type="button"
                                class="flex-1 inline-flex justify-center items-center rounded-lg bg-white px-4 py-2.5 text-sm font-semibold text-gray-700 shadow-sm ring-1 ring-inset ring-gray-300 hover:bg-gray-50 transition"
                                @onclick="CloseEditDialog">
                            Cancel
                        </button>
                    </div>
                </EditForm>
            </div>
        </div>
    </div>
}

@code {
    [Parameter]
    public List<User>? Users { get; set; }

    [Parameter]
    public EventCallback OnUserUpdated { get; set; }

    private User? EditingUser;
    private bool ShowEditDialog = false;

    private void EditUser(User user)
    {
        EditingUser = new User
            {
                Id = user.Id,
                Name = user.Name,
                Surname = user.Surname,
                Address = user.Address,
                Email = user.Email,
                Phone = user.Phone
            };
        ShowEditDialog = true;
    }

    private void CloseEditDialog()
    {
        ShowEditDialog = false;
        EditingUser = null;
    }

    private async Task UpdateUser()
    {
        if (EditingUser != null && EditingUser.Id != null)
        {
            await UserService.UpdateAsync(EditingUser.Id, EditingUser);
            CloseEditDialog();
            await OnUserUpdated.InvokeAsync();
        }
    }

    private async Task DeleteUser(string? id)
    {
        if (id != null)
        {
            await UserService.RemoveAsync(id);
            await OnUserUpdated.InvokeAsync();
        }
    }
}
